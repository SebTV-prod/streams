name: 22TV Celsona



on:

  schedule:

    - cron: '0 */4 * * *'

  

  workflow_dispatch:



jobs:



  build:

    runs-on: ubuntu-latest



    steps:



      - uses: actions/checkout@v2



       

      - name: get config

        run: |

          git config --global user.email "<>"

          git config --global user.name "Update"



      

      - name: grab twitch stream

        run: |

          pwd

          cd ./core/platforms/

          python3 twitch.py 22tv_celsona > ../../ressources/twitch/hls/22TVCelsona.m3u8

        

      - name: adding everything

        run: |

          git add -A

          ls -la 

          

      - name: commit & push

        run: |

          git commit -m "22TV Celsona updated"

          git push
